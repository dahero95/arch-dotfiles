    # Modern typography
    font = JetBrainsMono Nerd Font Medium 11
    format = "<b>%s</b>\n<span size='small'>%b</span>"
    alignment = left
    vertical_alignment = center
    
    # Smooth behavior
    stack_duplicates = true
    hide_duplicate_count = true
    show_indicators = no
    ellipsize = end
    
    # Minimalist icons
    icon_position = left
    min_icon_size = 32
    max_icon_size = 48
    icon_path = /usr/share/icons/Adwaita/scalable/status/:/usr/share/icons/Adwaita/scalable/devices/:/usr/share/icons/hicolor/:/usr/share/pixmaps/
    icon_theme = Papirus
    enable_recursive_icon_lookup = true
    
    # Smooth interactions
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current  
    mouse_right_click = close_all
    
    # History
    sticky_history = yes
    history_length = 50
    
    # Default colors
    background = "#282828"
    foreground = "#f5f5f5"

